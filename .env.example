# OpenMercura - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
# Gemini API Keys (up to 9 additional keys for rotation)
# Get keys from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
GEMINI_API_KEY_3=
GEMINI_API_KEY_4=
GEMINI_API_KEY_5=
GEMINI_API_KEY_6=
GEMINI_API_KEY_7=
GEMINI_API_KEY_8=
GEMINI_API_KEY_9=

# Moonshot AI (Kimi) - Used for document analysis/extraction when set
# Get keys from: https://platform.moonshot.ai/console/api-keys
# Uses general Kimi model (moonshot-v1-32k) for RFQ/document parsing
KIMI_API_KEY=
KIMI_MODEL=moonshot-v1-32k

# OpenRouter API Keys (up to 9 keys for rotation)
# Get keys from: https://openrouter.ai/keys
OPENROUTER_API_KEY_1=your_openrouter_key_here
OPENROUTER_API_KEY_2=
OPENROUTER_API_KEY_3=
OPENROUTER_API_KEY_4=
OPENROUTER_API_KEY_5=
OPENROUTER_API_KEY_6=
OPENROUTER_API_KEY_7=
OPENROUTER_API_KEY_8=
OPENROUTER_API_KEY_9=

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=OpenMercura
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-in-production
HOST=127.0.0.1
PORT=9000

# ============================================
# EMAIL PROVIDER (Optional)
# ============================================
# none, sendgrid, or mailgun
EMAIL_PROVIDER=none

# SendGrid Settings
SENDGRID_WEBHOOK_SECRET=
SENDGRID_INBOUND_DOMAIN=

# Mailgun Settings
MAILGUN_API_KEY=
MAILGUN_WEBHOOK_SECRET=
MAILGUN_DOMAIN=

# ============================================
# QUICKBOOKS INTEGRATION (Optional)
# ============================================
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_SANDBOX=true

# ============================================
# OPTIONAL FEATURES
# ============================================
# Product Knowledge Base (RAG for catalogs/specs)
KNOWLEDGE_BASE_ENABLED=false

# ============================================
# PROCESSING SETTINGS
# ============================================
MAX_ATTACHMENT_SIZE_MB=25
ALLOWED_ATTACHMENT_TYPES=pdf,png,jpg,jpeg
CONFIDENCE_THRESHOLD=0.7
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# PADDLE BILLING (Optional - Required for subscriptions)
# ============================================
# Get credentials from: https://vendors.paddle.com
# Use sandbox for testing: https://sandbox-vendors.paddle.com
PADDLE_SANDBOX=true
PADDLE_VENDOR_ID=
PADDLE_API_KEY=
PADDLE_WEBHOOK_SECRET=

# Paddle Plan IDs (create these in your Paddle dashboard)
PADDLE_PLAN_BASIC=
PADDLE_PLAN_PRO=
PADDLE_PLAN_ENTERPRISE=

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO