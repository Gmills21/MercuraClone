# MercuraClone Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# =============================================================================
# GOOGLE GEMINI AI CONFIGURATION
# =============================================================================
# Get this from Google AI Studio or Google Cloud Console
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# EMAIL PROVIDER CONFIGURATION
# =============================================================================
# Choose either SendGrid or Mailgun (not both)

# SendGrid Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_WEBHOOK_SECRET=your-sendgrid-webhook-secret
# Inbound Parse Domain: Set up in SendGrid dashboard
# Webhook URL: https://yourdomain.com/webhooks/inbound-email

# Mailgun Configuration (uncomment to use instead of SendGrid)
# EMAIL_PROVIDER=mailgun
# MAILGUN_WEBHOOK_SECRET=your-mailgun-webhook-secret
# MAILGUN_API_KEY=your-mailgun-api-key
# Webhook URL: https://yourdomain.com/webhooks/inbound-email

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Google Sheets Integration (optional)
# GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/service-account.json
# GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# Redis (for caching, optional)
# REDIS_URL=redis://localhost:6379

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Database settings for local development
DATABASE_URL=postgresql://user:password@localhost:5432/mercura_db

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File upload settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,txt,csv,xlsx,xls,png,jpg,jpeg

# AI processing settings
GEMINI_MODEL=gemini-1.5-flash
MAX_TOKENS=8192
TEMPERATURE=0.1

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
# Uncomment and configure for production deployment

# Railway deployment
# RAILWAY_STATIC_URL=
# RAILWAY_ENVIRONMENT=

# Render deployment
# RENDER_EXTERNAL_URL=
# RENDER_SERVICE_ID=

# Docker settings
# DOCKER_CONTAINER_NAME=mercura-api
# DOCKER_IMAGE_TAG=latest
