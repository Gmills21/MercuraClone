<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>openmercura-outlook-addin</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>OpenMercura</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="OpenMercura Quote Extractor"/>
  <Description DefaultValue="AI-powered quote extraction from emails"/>
  <IconUrl DefaultValue="http://127.0.0.1:9000/icon48.png"/>
  <HighResolutionIconUrl DefaultValue="http://127.0.0.1:9000/icon128.png"/>
  <SupportUrl DefaultValue="https://github.com/openmercura/docs"/>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="http://localhost:5174/outlook-addin/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message"/>
  </Rule>
  
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="PaneButtonLabel"/>
                  <Supertip>
                    <Title resid="PaneButtonTitle"/>
                    <Description resid="PaneButtonDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="http://127.0.0.1:9000/icon16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="http://127.0.0.1:9000/icon32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="http://127.0.0.1:9000/icon80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="http://localhost:5174/outlook-addin/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="http://localhost:5174/outlook-addin/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="OpenMercura"/>
        <bt:String id="PaneButtonLabel" DefaultValue="Extract Quote"/>
        <bt:String id="PaneButtonTitle" DefaultValue="AI Quote Extraction"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="PaneButtonDescription" DefaultValue="Extract quote data from this email using AI"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
